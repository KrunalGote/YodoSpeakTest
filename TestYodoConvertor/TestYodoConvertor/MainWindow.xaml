<Window x:Class="TestYodoConvertor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestYodoConvertor"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="txtInput" HorizontalAlignment="Left" Height="23" Margin="137,102,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="215"/>
        <Button x:Name="btnConvert" IsEnabled="{Binding ElementName=txtInput,Path=Text.Length}" Content="Convert" HorizontalAlignment="Left" Margin="137,174,0,0" VerticalAlignment="Top" Width="75" Click="btnConvert_Click" />
        <Label x:Name="lblOutput" Content="" HorizontalAlignment="Left" Margin="137,133,0,0" VerticalAlignment="Top" Width="246"/>
        <Label x:Name="lblInput" Content="Input Sentence:"  HorizontalAlignment="Left" Margin="33,102,0,0" VerticalAlignment="Top" Width="99"/>
        <Label x:Name="lblInputLabel" Content="Output:"  HorizontalAlignment="Left" Margin="33,133,0,0" VerticalAlignment="Top" Width="99"/>

    </Grid>
</Window>
